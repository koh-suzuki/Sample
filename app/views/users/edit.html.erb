<div class="main users-new">
  <div class="container">
    <div class="form-heading">ユーザー編集</div>
    <div class="form users-form">
      <div class="form-body">
      <% @user.errors.full_messages.each do |message| %>
        <div class="form-error"><%= message %></div>
      <% end %>
      <%= form_tag user_path, method: :patch do %>
        <p>ユーザー名</p>
        <input name="name", value="<%= @user.name %>", placeholder="名前を入力してください">
        <p>メールアドレス</p>
        <input name="email", value="<%= @user.email %>", placeholder="Email入力してください">
        <input type="submit" value="保存"">
      <% end %>
      </div>
    </div>
  </div>
</div>